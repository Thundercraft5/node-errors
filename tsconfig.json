{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2020",
		"lib": [
			"esnext"
		],
		"allowJs": true,
		"sourceMap": true,
		"preserveSymlinks": true,
		"checkJs": true,
		"skipLibCheck": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "dist",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "Node",
		"jsx": "preserve",
		"incremental": true,
		"isolatedModules": true
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"./dist/**"
	]
}